<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Azure"
    tools:context=".ManageAppActivity">

    <TextView
        android:id="@+id/totalUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="59dp"
        android:gravity="center"
        android:text="Total User"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/totalHouseUploaded"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/totalHouseUploaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="66dp"
        android:layout_marginTop="252dp"
        android:gravity="center"
        android:text="Total house uploaded"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalLandUploaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Total land uploaded"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/totalHouseUploaded"
        app:layout_constraintTop_toBottomOf="@+id/totalHouseUploaded" />

    <TextView
        android:id="@+id/activeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:text="Active user"
        android:textColor="@color/green"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/totalLandUploaded"
        app:layout_constraintTop_toBottomOf="@+id/totalLandUploaded" />

    <Button
        android:id="@+id/add_notification_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Add notice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notificationText" />

    <EditText
        android:id="@+id/notificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:hint="Type new notice"
        android:inputType="textPersonName"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>